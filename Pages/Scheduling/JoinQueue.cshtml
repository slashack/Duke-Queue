@page 
@model Duke_Queue.Pages.Scheduling.JoinQueueModel
@{
}


<style>
  .long-input {
    width: 400px;
   /* height: 50px; set the width to your desired length */
  }
</style>

<form asp-page-handler="JoinQueue" method="post">
    <label for="queuePurpose">Meeting Purpose:</label>
    <select asp-for="JoinQueue.officeHoursQueuePurpose" class="form-control" id="queuePurpose">
        <option value="">--Select a purpose--</option>
        <option value="Question about course material">Question about course material</option>
        <option value="Assignment help">Assignment help</option>
        <option value="Exam preparation">Exam preparation</option>
        <option value="Other">Other</option>
    </select>
    <input type="submit" class="btn btn-primary" value="Submit" />
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

