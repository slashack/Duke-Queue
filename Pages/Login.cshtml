@page
@model Duke_Queue.Pages.LoginModel
@{
}

<main class="login-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Login</div>
                    <div class="card-body">
                        <form asp-page="DBLogin">
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label text-md-right">Username</label>
                                <div class="col-md-6">
                                    <input asp-for="Username" class="form-control" required autofocus>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label text-md-right">Password</label>
                                <div class="col-md-6">
                                    <input asp-for="Password" class="form-control" type="password" class="form-control"  required>
                                </div>
                            </div>
                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">Login</button>
                                <a href="/Signup" class="btn btn-link">Click to sign up</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

</main>


@{
    if (HttpContext.Session.GetString("username") != null)
    {
        <p class="text-success">@ViewData["HashedLoginMessage"]</p>
    }
    else
    {
        <p class="text-danger">
            @ViewData["HashedLoginMessage"]
        </p>
    }
}
