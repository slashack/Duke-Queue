@page
@model Duke_Queue.Pages.LoginModel
@{
}

<form asp-page="DBLogin">
    <legend>Login using your account details below:</legend>
    <label>Enter Username:</label>
    <input asp-for="Username" class="form-control" placeholder="Enter Username" />
    <br />
    <label>Enter Password:</label>
    <input asp-for="Password" class="form-control" type="password" />
    <br />
    <input type="submit" class="btn btn-primary" />
    <a href="/SignUp">Don't have an account? Sign Up Here</a>
</form>
<br />
@{
    if (HttpContext.Session.GetString("username") != null)
    {
        <p class="text-success">@ViewData["HashedLoginMessage"]</p>
    }
    else
    {
        <p class="text-danger">
            @ViewData["HashedLogiMessage"]
        </p>
    }
}

