@page
@model Duke_Queue.Pages.Home.ViewQueue3Model
@{
}

<style>
    /* Style the table */
    table {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
        margin-top: 50px;
        margin-bottom: 50px;
    }

    /* Set the style for the table header */
    th {
        background-color: #008CBA;
        color: white;
        text-align: left;
        padding: 8px;
    }

    /* Set the style for the table rows */
    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    /* Set the style for the table data cells */
    td {
        border: 1px solid #ddd;
        padding: 8px;
    }

    /* Style the paragraph */
    p {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }
</style>

<table>
    <tr>
        <td>
            <p>Student Removed:</p>
            @if (ViewData.ContainsKey("Start"))
            {
                <table>
                    <tr>
                        <th>Start Time:</th>
                    </tr>
                    <tr>
                        <td>@ViewData["Start"]</td>
                    </tr>
                </table>
            }
            else if (ViewData.ContainsKey("End"))
            {
                <table>
                    <tr>
                        <th>End Time:</th>
                    </tr>
                    <tr>
                        <td>@ViewData["End"]</td>
                    </tr>
                </table>
            }
        </td>
    </tr>
</table>
