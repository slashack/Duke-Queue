@page
@model Duke_Queue.Pages.SignUpModel
@{
}

<main class="login-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Account Sign Up</div>
                    <div class="card-body">
                        <form asp-page="DBLogin">
                            <div class="alert alert-secondary" role="alert">
                                Enter account details below to create a student account
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label text-md-right">First Name</label>
                                <div class="col-md-7">
                                    <input asp-for="FirstName" class="form-control" required autofocus>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-3 col-form-label text-md-right">Email</label>
                                <div class="col-md-7">
                                    <input asp-for="Email" type="email" class="form-control" class="form-control" required autofocus>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-3 col-form-label text-md-right">Username</label>
                                <div class="col-md-7">
                                    <input asp-for="Username" class="form-control" class="form-control" required autofocus>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-3 col-form-label text-md-right">Password</label>
                                <div class="col-md-7">
                                    <input asp-for="Password" class="form-control" type="password" class="form-control" required autofocus>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-3 col-form-label text-md-right">Last Name</label>
                                <div class="col-md-7">
                                    <input asp-for="LastName" class="form-control" class="form-control" required autofocus>
                                </div>
                            </div>
                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">Create Account</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</main>

